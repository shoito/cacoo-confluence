<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="cacoo-confluence"/>
    
    <!-- add our web resources -->
    <web-resource key="cacoo-confluence-resources" name="cacoo-confluence-web-resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="cacoo-confluence.css" location="/css/cacoo-confluence.css"/>
        <resource type="download" name="cacoo-confluence.js" location="/js/cacoo-confluence.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>cacoo-confluence</context>
    </web-resource>

    <xhtml-macro name="cacoo"
                 class="com.github.shoito.confluence.integration.cacoo.macro.CacooMacro"
                 key="cacoo-macro"
                 icon="/download/resources/com.github.shoito.confluence.integration.cacoo:cacoo-confluence-resources/images/pluginLogo.png"
                 documentation-url="https://github.com/shoito/cacoo-confluence/usage.md">
        <description>Inserts Cacoo diagrams in the pages</description>
        <category name="visuals"/>
        <!--<category name="development"/>-->
        <!--<category name="external-content"/>-->
        <parameters>
            <parameter name="diagram-url" type="string" required="true" default="https://cacoo.com/diagrams/pByowlpiZ7YTV7UN">
                <option key="showNameInPlaceholder" value="false" />
                <option key="showValueInPlaceholder" value="true" />
            </parameter>
            <parameter name="width" type="int" default="640">
                <option key="showNameInPlaceholder" value="false" />
                <option key="showValueInPlaceholder" value="true" />
            </parameter>
            <parameter name="height" type="int" default="480">
                <option key="showNameInPlaceholder" value="false" />
                <option key="showValueInPlaceholder" value="true" />
            </parameter>
        </parameters>
    </xhtml-macro>

    <web-item name="web-item: Insert Menu" key="editor-featured-macro-cacoo" section="system.editor.featured.macros.default" weight="11">
        <description>Insert Cacoo Diagrams</description>
        <label>Cacoo</label>
        <icon height="16" width="16">
            <link>/download/resources/com.github.shoito.confluence.integration.cacoo:cacoo-confluence-resources/images/pluginIcon.png</link>
        </icon>
        <link linkId="cacoo" />
    </web-item>
    
    <!-- import from the product container -->
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties" />
    
</atlassian-plugin>